<Window x:Class="WpfApp8.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="StackPanel_LogMessages" Margin="10">
            </StackPanel>
        </ScrollViewer>
        <Button Content="Очистить журнал" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="ClearLog_Click"/>
    </Grid>
</Window>
